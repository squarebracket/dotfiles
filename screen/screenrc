bindkey -m "^[[6;2~" stuff ^d
bind ^y eval "writebuf $HOME/.screen-buffer-$REMOTE_USER" "exec bash -c '$HOME/$DOTFILES/shared-shell-scripts/copyback"
hardstatus alwayslastline
